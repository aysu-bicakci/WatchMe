@using Microsoft.EntityFrameworkCore
@using WatchMe.Data
@inject AppDbContext _context;

 <section class="hero" style=" background-image: url('/images/oppenheimer.jpeg');">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1>Unlimited movies, TV shows, and more.</h1>
            <p>Watch anywhere. Cancel anytime.</p>
            <form action="@Url.Action("Register", "Home")" method="get">
            <button type="submit" class="btn-get-started">Get Started</button>
        </form>
        </div>
 </section>

<section>
    <h2>En Yeni Filmler</h2>
   @await Html.PartialAsync("_NetflixCard", await _context.Movies.OrderByDescending(m => m.ReleaseDate).Take(6).ToListAsync())
</section>

